@model vidly_aspnet_learn.Models.Movie

@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>

<ul>
    <li>
        <strong>Genre:</strong>
        @Model.Genre.Name
    </li>
    <li>
        <strong>Release Date:</strong>
        @Model.ReleaseDate.ToString("d")
    </li>
    <li>
        <strong>Date Added:</strong>
        @Model.DateAdded.ToShortDateString()
    </li>
    <li>
        <strong>Number In Stock:</strong>
        @Model.NumberInStock
    </li>
</ul>